<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".usuarios">

    <EditText
        android:id="@+id/edtTipopersona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Ingrese el tipo de persona"
        android:inputType="text"
        android:textColor="#009688"
        android:textColorHint="#009688"
        android:lines="1"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="442dp" />

    <EditText
        android:id="@+id/edtNumeroTelefono"
        android:layout_width="359dp"
        android:layout_height="54dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Ingrese el numero de telefono"
        android:inputType="text"
        android:textColor="#009688"
        android:textColorHint="#009688"
        android:lines="1"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="362dp" />

    <EditText
        android:id="@+id/edtApellidos"
        android:layout_width="364dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Ingrese sus apellidos"
        android:inputType="text"
        android:lines="1"
        android:textAllCaps="false"
        android:textColor="#009688"
        android:textColorHint="#009688"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="275dp" />

    <EditText
        android:id="@+id/edtNombres"
        android:layout_width="364dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Ingrese su nombre"
        android:inputType="text"
        android:textColor="#009688"
        android:textColorHint="#009688"
        android:lines="1"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="203dp" />

    <EditText
        android:id="@+id/edtNumeroCedula"
        android:layout_width="366dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Ingrese el numero de la cedula"
        android:inputType="text"
        android:textColor="#009688"
        android:textColorHint="#009688"
        android:lines="1"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="133dp" />

    <TextView
        android:id="@+id/txtUsuario"
        android:layout_width="173dp"
        android:layout_height="60dp"
        android:text="Usuario"
        android:textColor="#009688"
        android:textSize="48sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="30dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="149dp"
        android:layout_height="62dp"
        android:text="Ingresar"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="530dp" />

</androidx.constraintlayout.widget.ConstraintLayout>